 <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     >

    <Style xmlns:windowsShell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework" x:Key="BorderlessWindowStyle" TargetType="Window">
        <Setter Property="windowsShell:WindowChrome.WindowChrome">
            <Setter.Value>
                <windowsShell:WindowChrome ResizeBorderThickness="5" CaptionHeight="0" CornerRadius="0" GlassFrameThickness="0,0,1,1"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>